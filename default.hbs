<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="{{asset "dist/css/style.css"}}" />

    <title>{{meta_title}}</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in <head> --}}

</head>
<body class="{{body_class}}">

	<header class="src-header">
		<div class="src-container pt-12 pb-8" data-flex="row">
			<div class="src-header__title" data-column="4">
				<a class="src-title__link" href="{{@site.url}}">
					{{#if @site.logo}}
						<img src="{{@site.logo}}" alt="{{@site.title}}" />
					{{else}}
						{{@site.title}}
					{{/if}}
            </a>
			</div>
			<div class="src-header__menu" data-column="8">
				<nav class="src-nav">
					{{navigation}}
				</nav>
			</div>
		</div>
	</header>

	<main class="src-container">

		{{{body}}}
		{{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}

	</main>

	<footer class="src-footer">
	   <div class="src-container" data-flex="row">
			<div class="src-footer__menu" data-column="4">
				{{navigation}}
			</div>
			<div class="src-footer__copy" data-column="4">
				<small>Copyright 2022</small>
			</div>
			<div class="src-footer__social" data-column="4">
				<ul>
					<li><a href="#"><i class="ion-facebook"></i></a><a href="#"><i class="ion-twitter"></i></a><a href="#"><i class="ion-reddit"></i></a><a href="#"><i class="ion-instagram"></i></a></li>
				</ul>
			</div>
		</div>
	</footer>

<script src="{{asset "built/jquery-3.4.1.min.js"}}"></script>

{{#if pagination.pages}}
	<script>
		var maxPages = parseInt('{{pagination.pages}}');
	</script>
	<script src="{{asset "built/infinitescroll.js"}}"></script>
{{/if}}

<script>
	$(document).ready(function () {
		// Mobile Menu Trigger
		$('.gh-burger').click(function () {
			$('body').toggleClass('gh-head-open');
		});
	});
</script>

{{#is "post, page"}}
	<script src="{{asset "built/jquery.fitvids.js"}}"></script>
	<script>
		var images = document.querySelectorAll('.kg-gallery-image img');
		images.forEach(function (image) {
			var container = image.closest('.kg-gallery-image');
			var width = image.attributes.width.value;
			var height = image.attributes.height.value;
			var ratio = width / height;
			container.style.flex = ratio + ' 1 0%';
		});
		$(document).ready(function () {
			var $postContent = $(".gh-content");
			$postContent.fitVids();
		});
	</script>
{{/is}}

{{ghost_foot}}
{{!-- Outputs important scripts - should always be included before closing body tag --}}

</body>
</html>