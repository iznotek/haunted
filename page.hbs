{{!< default}}

{{#post}}
<article class="src-article src-container {{post_class}}">

    <header class="src-article__header src-canvas">
        <h1 class="src-article__title">{{title}}</h1>

        {{#if custom_excerpt}}
            <p class="src-article__excerpt">{{custom_excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
            <figure class="src-article__feature-image">
                <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
        {{/if}}
    </header>

    <div class="src-article__content src-canvas">
        {{content}}
    </div>

</article>
{{/post}}
