<div class="src-share-icons">
  <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{t "Share on"}} Twitter"
      data-event-category="Article"
      data-event-action="Share"
      data-event-label="{{Tracking_name}} - Twitter"
      data-event-non-interaction="true">
      <i class="ion-facebook"></i>
  </a>
  {{!-- Share on Linkedin --}}
  <a href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&amp;title={{encode title}}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{t "Share on"}} Linkedin"
      data-event-category="Article"
      data-event-action="Linkedin"
      data-event-label="{{Tracking_name}} - Linkedin"
      data-event-non-interaction="true">
      <i class="ion-twitter"></i>
  </a>
  {{!-- Share on Facebook --}}
  <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{t "Share on"}} Facebook"
      data-event-category="Article"
      data-event-action="Share"
      data-event-label="{{Tracking_name}} - Facebook"
      data-event-non-interaction="true">
      <i class="ion-reddit"></i>
  </a>
  <a href="whatsapp://send?text={{url absolute="true"}}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{t "Share on"}} WhatSapp"
      data-event-category="Article"
      data-event-action="Share"
      data-event-label="{{Tracking_name}} - Whatsapp"
      data-event-non-interaction="true">
      <i class="ion-instagram"></i>
  </a>
</div>