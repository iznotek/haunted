{
    "name": "ghost-starter-theme",
    "description": "A custom theme for ghost",
    "demo": "https://starter.ghost.io",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Starter.git"
    },
    "bugs": "https://github.com/TryGhost/Starter/issues",
    "dependencies": {
        "@waaark/luge": "^0.6.7-beta",
        "babel": "^6.23.0",
        "fslightbox": "^3.3.1",
        "lightgallery": "^2.4.0",
        "postcss": "8.4.12",
        "sass": "^1.49.9",
        "swiper": "^8.0.7",
        "tailwindcss": "^3.0.23",
        "uglify": "^0.1.5"
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/preset-env": "^7.16.11",
        "@babel/register": "^7.17.7",
        "autoprefixer": "10.4.4",
        "babel-jest": "^27.5.1",
        "babel-loader": "^8.2.4",
        "babel-polyfill": "^6.26.0",
        "beeper": "2.1.0",
        "browser-sync": "^2.27.9",
        "core-js": "^3.21.1",
        "cssnano": "5.1.5",
        "del": "^6.0.0",
        "gsap": "^3.9.1",
        "gscan": "4.25.2",
        "gulp": "4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-imagemin": "^7.1.0",
        "gulp-postcss": "9.0.1",
        "gulp-purgecss": "^4.1.3",
        "gulp-replace": "^1.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-terser": "^2.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-webp": "^4.0.1",
        "gulp-zip": "5.1.0",
        "jest": "^27.5.1",
        "log-symbols": "^4.1.0",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0"
    },
    "config": {
        "custom": {
            "search_in_content": {
                "type": "boolean",
                "default": false
            },
            "enable_image_lightbox": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "open_external_links_in_new_tab": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        },
        "posts_per_page": 6,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "browserslist": [
        "defaults"
    ]
}
