{{!< default}}

{{#post}}

<article class="src-page {{post_class}}">

    <header class="src-page__header">
      {{#if feature_image}}
        <figure class="src-page__feature-image">
          <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
          {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
          {{/if}}
        </figure>
        {{/if}}
      <h1 class="src-page__title">{{title}}</h1>
    </header>

    <div class="src-page__content src-container">
      {{content}}
    </div>

    <footer class="src-page__footer">

      {{!--
      <section class="src-article__post-comments">
          If you want to embed comments, this is a good place to do it!
      </section>
      --}}

    </footer>

</article>

{{/post}}